<?xml encoding='utf-8' version='1.0'?>
<widget id="com.app.torrance" version="1.0.0" 
    xmlns:cdv="http://cordova.apache.org/ns/1.0" 
    xmlns="http://www.w3.org/ns/widgets">
    <name>Torrance</name>
    <description>
        A conference application for refineries
    </description>
    <author email="admin@torrance.com" href="http://www.torrance.com">
        Torrance
    </author>
    <content src="index.html"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <allow-navigation href="http://*/*"/>
    <allow-navigation href="https://*/*"/>
    <allow-navigation href="data:*"/>
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <preference name="EnableViewportScale" value="true"/>
    <preference name="AndroidPersistentFileLocation" value="Internal"/>
    <access launch-external="yes" origin="*"/>
    <access launch-external="yes" origin="http://torrance.fitandappy.com/*"/>
    <access origin="http://fitandappy.com" subdomains="true"/>
    <access origin="http://torrance.fitandappy.com"/>
    <access origin="http://torrance.fitandappy.com/*"/>
    <access origin="http://torrance.fitandappy.com/index.php"/>
    <access origin="http://torrance.fitandappy.com/android"/>
    <access origin="http://torrance.fitandappy.com/admin_cta/vehicle_upload/Vehicle%20Request%20Form.pdf/*"/>
    <allow-intent href="http://torrance.fitandappy.com/admin_cta/vehicle_upload/Vehicle%20Request%20Form.pdf"/>
    <allow-intent href="http://torrance.fitandappy.com"/>
    <allow-navigation href="*://maps.google.com/maps"/>
    <allow-navigation href="*://www.google.com/maps"/>
    <access-navigation href="http://torrance.fitandappy.com"/>
    <access-navigation href="http://torrance.fitandappy.com/*"/>
    <access-navigation href="http://torrance.fitandappy.com/index.php"/>
    <access-navigation href="http://torrance.fitandappy.com/admin_cta/vehicle_upload/Vehicle%20Request%20Form.pdf"/>
    <allow-navigation href="http://torrance.fitandappy.com/*"/>
    <allow-navigation href="*"/>
    <preference name="loadUrlTimeoutValue" value="60000"/>
    <engine name="browser" spec="~5.0.4"/>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3"/>
    <plugin name="cordova-plugin-inappbrowser" spec="^3.0.0"/>
    <plugin name="cordova-plugin-network-information" spec="^2.0.1"/>
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1"/>
    <plugin name="cordova-plugin-camera" spec="^4.0.3"/>
    <plugin name="cordova-plugin-media-capture" spec="^3.0.2"/>
    <plugin name="cordova-plugin-vibration" spec="^3.1.0"/>
    <plugin name="cordova-plugin-document-viewer"/>

    <platform name="android">
        <allow-intent href="market:*"/>
        <icon density="ldpi" src="res/icon/android/ldpi.png"/>
        <icon density="mdpi" src="res/icon/android/mdpi.png"/>
        <icon density="hdpi" src="res/icon/android/hdpi.png"/>
        <icon density="xhdpi" src="res/icon/android/xhdpi.png"/>
        <icon density="xxhdpi" src="res/icon/android/xxhdpi.png"/>
        <icon density="xxxhdpi" src="res/icon/android/xxxhdpi.png"/>

        <splash density="land-hdpi" src="res/screen/android/drawable-land-hdpi/screen.png" />
        <splash density="land-ldpi" src="res/screen/android/drawable-land-ldpi/screen.png" />
        <splash density="land-mdpi" src="res/screen/android/drawable-land-mdpi/screen.png" />
        <splash density="land-xhdpi" src="res/screen/android/drawable-land-xhdpi/screen.png" />
        <splash density="hdpi" src="res/screen/android/drawable-hdpi/screen.png" />
        <splash density="ldpi" src="res/screen/android/drawable-ldpi/screen.png" />
        <splash density="mdpi" src="res/screen/android/drawable-mdpi/screen.png" />
        <splash density="xhdpi" src="res/screen/android/drawable-xhdpi/screen.png" />
    </platform>
    <platform name="android">
        <preference name="android-minSdkVersion" value="19"/>
        <allow-intent href="market:*"/>
    </platform>

    <platform name="ios">
        <icon height="167" src="res/icon/ios/Icon-83.5@2x.png" width="167"/>
        <icon height="80" src="res/icon/ios/Icon-40x40@2x.png" width="80" />
        <icon height="120" src="res/icon/ios/Icon-60x60@2x.png" width="120" />
        <icon height="180" src="res/icon/ios/Icon-60x60@3x.png" width="180" />
        <icon height="76" src="res/icon/ios/Icon-76x76@1x" width="76" />
        <icon height="152" src="res/icon/ios/Icon-76x76@2x" width="152" />

        <splash height="480" src="res/screen/ios/LaunchImage~iphone-320x960" width="320"/>
        <splash height="960" src="res/screen/ios/LaunchImage~iphone-640x960.png" width="640"/>
        <splash height="1024" src="res/screen/ios/LaunchImage-Portrait~ipad_768x1024" width="768"/>
        <splash height="2048" src="res/screen/ios/LaunchImage-Portrait@2x~ipad_1536x2048" width="1536"/>
        <splash height="768" src="res/screen/ios/LaunchImage-Landscape~ipad_1024x748" width="1024"/>
        <splash height="1536" src="res/screen/ios/LaunchImage-Portrait@2x~ipad_2048x2732" width="2048"/>
        <splash height="1136" src="res/screen/ios/LaunchImage-568h@2x~iphone_640x1136" width="640"/>
        <splash height="1334" src="res/screen/ios/LaunchImage-750@2x~iphone6-portrait_750x1334" width="750"/>
        <splash height="2208" src="res/screen/ios/LaunchImage-1242@3x~iphone6s-portrait_1242x2208" width="1242"/>
    </platform>

    <!-- <platform name="android">
                <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
                    <application android:usesCleartextTraffic="true" />
                </edit-config> 
            </platform> -->

    <plugin name="phonegap-plugin-mobile-accessibility" spec="https://github.com/phonegap/phonegap-mobile-accessibility.git"/>
    <plugin name="cordova-plugin-splashscreen" spec="https://github.com/apache/cordova-plugin-splashscreen.git"/>

</widget>
